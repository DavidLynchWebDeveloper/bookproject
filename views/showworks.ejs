        <div class="containerbox1">

          <% if (error === "Sorry No Listings Found") { %>

            <h1>Sorry No Listings Found</h1>
            
          <% } else { %>

            <% for (var i=0;i<count;i++) { %>
            <div class="formWrapper">
              
              <%= items[i] %> &nbsp;
              <form action="/dbadd" method="post">
                <input type="hidden" name="writer" value="<%= writer %>">
                <input type="hidden" name="key" value="<%= key %>">
                <input type="hidden" name="title" value="<%= items[i] %>">
                <input type="hidden" name="type" value="read">
                <button type="submit" class="markread">Mark Read</button>
             </form> 

             <form action="/dbadd" method="post">
                <input type="hidden" name="writer" value="<%= writer %>">
                <input type="hidden" name="key" value="<%= key %>">
                <input type="hidden" name="title" value="<%= items[i] %>">
                <input type="hidden" name="type" value="wish">
                <button type="submit" class="wishlist">Wish List</button>
              </form> 

            </div>
            <% } %>
          <% } %>
        
        </div>
      </div>
      
    </div>

